{
    "name": "@tipi/shared",
    "version": "1.0.0",
    "description": "Shared types and utilities for Tipi Ink",
    "main": "dist/commonjs/index.js",
    "types": "dist/commonjs/index.d.ts",
    "module": "dist/esm/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json && tsc -p tsconfig.esm.json",
