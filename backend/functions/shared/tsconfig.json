{
    "compilerOptions": {
        "composite": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "target": "ES2020",
        "skipLibCheck": true,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
