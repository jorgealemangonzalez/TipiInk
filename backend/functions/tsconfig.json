{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "target": "es2017",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {},
        "preserveSymlinks": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"]
}
